# SM_UP Environment Variables
# انسخ هذا الملف إلى .env وعدل القيم

# Database Configuration
DATABASE_URL=postgresql://sm_up:password@localhost:5432/sm_up_db
POSTGRES_DB=sm_up_db
POSTGRES_USER=sm_up
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_SECRET_KEY=your_very_secure_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
API_HOST=0.0.0.0
API_PORT=8000

# GPU Worker Configuration
GPU_WORKER_URL=http://localhost:8001
CUDA_VISIBLE_DEVICES=0

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_SITE_NAME=SM_UP

# File Storage
UPLOAD_DIR=./data/uploads
RESULT_DIR=./data/results
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Paymob Configuration (سيتم إضافتها لاحقاً)
PAYMOB_API_KEY=your_paymob_api_key
PAYMOB_INTEGRATION_ID=your_integration_id
PAYMOB_HMAC_SECRET=your_hmac_secret

# Email Configuration (للإشعارات)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Monitoring (اختياري)
SENTRY_DSN=your_sentry_dsn_here

# Development/Production
ENVIRONMENT=development
DEBUG=true
